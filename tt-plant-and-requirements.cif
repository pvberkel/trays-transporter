// Plants and requirements as input for supervisory controller synthesis.

import "tt-plant.cif";

// Lamp on only while button is pushed.
requirement c_transfered_to_pusher needs pusher_sensor.down;
requirement c_transfered_to_pusher needs pusher_ls.off and pusher_ss.off;

requirement c_transfered_to_stack needs pusher_sensor.up;
requirement c_transfered_to_stack needs pusher_ls.on and pusher_ss.on;

//requirement FIFO: pusher_sensor.up => pusher_ss.on;

requirement pusher_ss.c_on needs tray_stack.count < tray_stack.MAX_SIZE;
requirement pusher_ss.c_on needs holder.on and holder_sensor.opened;

requirement holder.c_on needs pusher_ls.on and pusher_ss.off and pusher_sensor.middle;
requirement holder.c_off needs pusher_tray.is_empty;
requirement pusher_ls.c_off needs holder.off and holder_sensor.closed;
requirement pusher_ss.c_off needs holder.off and holder_sensor.closed;

